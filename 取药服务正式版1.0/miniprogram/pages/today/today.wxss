.weather{
color: rgb(155, 240, 233) ;
font-size:18px;
background: rgba(132, 136, 130, 0.534);
margin-top:1px;
height:50px;
}

page {
overflow:hidden;
position:fixed;
background-image:url('https://pic1.zhimg.com/80/v2-843e665af60aef33735a61f14e81fdd8_hd.jpg');
margin-top: 20px;
/*下面的是关键的设置100%显示*/
background-size: 100% 100%;
}
.draw{

width: 30px; 
height: 30px;
}

.music{
width:250rpx;
height:250rpx;
left:250rpx;
top:12rpx;
position:relative;
}

.music2{
width:100%;
height:100%;
border-radius:50%;
}

.music3{
width:100rpx;
height:100rpx;
position:absolute;
left:75rpx;
top:75rpx;
}

.times{
  width: 100rpx;
  text-align: center;
  display: inline-block;
  font-size: 24rpx;
  color:#999999;
  margin-top: 5rpx;
}

.slid view{
  display: flex;
  justify-content: space-between;
}
.slid view>text:nth-child(1){
  color: #4c9dee;
  margin-left:40rpx; 
}
.slid view>text:nth-child(2){
  color:rgb(255, 255, 255);
  margin-right:40rpx; 
}

slider{
  width: 520rpx;
  margin: 0;
  margin-left:115rpx;
}